<!DOCTYPE html>
<html>
  <head>
    <title>Hello Friend!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Hello</h1>
   @using PackerTracker.Models;

    @if (Model.Count == 0)
    {
        <p>Welcome! your list of camping items is empty</p>
    }
    else
    {
      <form action="/campingitem/:id" method="get">
      <p>Click on an item to see its details</p>
        @foreach (CampingItem item in Model)
        {
          <a href="/campingitem/@item.Id">@item.Item</a><br>
        }
      </form>
      
      <form action="/campingitem/delete" method="post">
        <button type="submit">delete all items from list</button>
      </form>
    }
    <a href="/campingitem/new">Click here to add to the list</a><br>
      
  </body>
</html>